<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymPal.Pages.RunningView2"
             BackgroundColor="{StaticResource Background}">

    <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <VerticalStackLayout Padding="10,0" Spacing="20" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1">

            <!-- Header -->
            <Grid HeightRequest="120" WidthRequest="450" Padding="10" HorizontalOptions="Fill">

                <!-- Tillbaka-pil -->
                <ImageButton
                  x:Name="BackIcon" 
                  Source="back.png"
                  CornerRadius="20"
                  HeightRequest="80"
                  WidthRequest="80"
                  Aspect="AspectFit"
                  HorizontalOptions="Start"
                  VerticalOptions="Start"
                  SemanticProperties.Description="Manage home button." 
                  Clicked="HomeBtn_Clicked" />

                <!-- Titel -->
                <Label 
                Text="Workouts"
                Style="{StaticResource SubHeadline}"
                HorizontalOptions="Center"
                VerticalOptions="Center"                    
                SemanticProperties.Description="Core workout title" />

                <!-- Rund bild -->
                <Image Source="kondition.png"                   
              HeightRequest="80"
              WidthRequest="80"
              Aspect="AspectFit"
              HorizontalOptions="End"
              VerticalOptions="Center"
              SemanticProperties.Description="kondition icon" />

                <Line X1="0" Y1="0" X2="500" Y2="0" 
                   Stroke="{StaticResource SecondaryGreen}"
                   VerticalOptions="End" />

            </Grid>

                    
             <ScrollView VerticalScrollBarVisibility="Always" HeightRequest="450">
                <StackLayout x:Name="FrameStack" Spacing="20" IsVisible="True">

                    <!-- Timer -->
                    <Grid x:Name="TimerGrid" HeightRequest="60" BackgroundColor="Transparent" IsVisible="True">
                        <HorizontalStackLayout>
                            <Label Text="Start Time:" WidthRequest="250" Style="{StaticResource SubHeadline}"/>
                            <Border WidthRequest="150" VerticalOptions="Center">
                                <Label x:Name="TimeDisplay" Text="00:00" Style="{StaticResource SubHeadline}"/>
                            </Border>
                        </HorizontalStackLayout>
                    </Grid>

                    <!--Running Form -->
                    <Frame x:Name="RunForm" HeightRequest="350" WidthRequest="400" Margin="5" BackgroundColor="#D7EDE6" IsVisible="False">
                        <StackLayout>
                            <Label Text="Running" FontSize="Small" HorizontalOptions="Center" />
                            <Grid WidthRequest="400" HeightRequest="50" Padding="5" Margin="5" HorizontalOptions="Start">
                                <Label Text="Distance:" FontSize="Small" HorizontalTextAlignment="Start"/>
                                <Editor WidthRequest="250" HorizontalOptions="End"/>
                            </Grid>
                            <Grid WidthRequest="400" HeightRequest="50" Padding="5" Margin="5" HorizontalOptions="Start">
                                <Label Text="Time:" FontSize="Small" HorizontalTextAlignment="Start"/>
                                <Editor WidthRequest="250" HorizontalOptions="End"/>
                            </Grid>
                            <Grid WidthRequest="400" HeightRequest="50" Padding="5" Margin="5" HorizontalOptions="Start">
                                <Label Text="Note:" FontSize="Small" HorizontalTextAlignment="Start"/>
                                <Editor WidthRequest="250" HorizontalOptions="End"/>
                            </Grid>
                            <Grid WidthRequest="400" HeightRequest="50" Padding="5" Margin="5" HorizontalOptions="Start">
                                <Label Text="Location:" FontSize="Small" HorizontalTextAlignment="Start"/>
                                <Editor WidthRequest="250" HorizontalOptions="End"/>
                            </Grid>
                            <Grid WidthRequest="400" Padding="5" Margin="5">
                                <Button Text="SAVE" FontSize="Small" WidthRequest="100" HeightRequest="50" IsEnabled="False"/>
                            </Grid>
                        </StackLayout>
                    </Frame>

                    <!--Walking Form -->
                    <Frame x:Name="WalkForm" HeightRequest="350" WidthRequest="400" Margin="5" BackgroundColor="#D7EDE6" IsVisible="False">
                        <StackLayout>
                            <Label Text="Walking" FontSize="Small" HorizontalOptions="Center" />
                            <Grid WidthRequest="400" HeightRequest="50" Padding="5" Margin="5" HorizontalOptions="Start">
                                <Label Text="Distance:" FontSize="Small" HorizontalTextAlignment="Start"/>
                                <Editor WidthRequest="250" HorizontalOptions="End"/>
                            </Grid>
                            <Grid WidthRequest="400" HeightRequest="50" Padding="5" Margin="5" HorizontalOptions="Start">
                                <Label Text="Time:" FontSize="Small" HorizontalTextAlignment="Start"/>
                                <Editor WidthRequest="250" HorizontalOptions="End"/>
                            </Grid>
                            <Grid WidthRequest="400" HeightRequest="50" Padding="5" Margin="5" HorizontalOptions="Start">
                                <Label Text="Note:" FontSize="Small" HorizontalTextAlignment="Start"/>
                                <Editor WidthRequest="250" HorizontalOptions="End"/>
                            </Grid>
                            <Grid WidthRequest="400" HeightRequest="50" Padding="5" Margin="5" HorizontalOptions="Start">
                                <Label Text="Location:" FontSize="Small" HorizontalTextAlignment="Start"/>
                                <Editor WidthRequest="250" HorizontalOptions="End"/>
                            </Grid>
                            <Grid WidthRequest="400" Padding="5" Margin="5">
                                <Button Text="SAVE" FontSize="Small" WidthRequest="100" HeightRequest="50" IsEnabled="False"/>
                            </Grid>
                        </StackLayout>
                    </Frame>

                    <!--Swimming Form -->
                    <Frame x:Name="SwimForm" HeightRequest="350" WidthRequest="400" Margin="5" BackgroundColor="#D7EDE6" IsVisible="False">
                        <StackLayout>
                            <Label Text="Swimming" FontSize="Small" HorizontalOptions="Center" />
                            <Grid WidthRequest="400" HeightRequest="50" Padding="5" Margin="5" HorizontalOptions="Start">
                                <Label Text="Distance:" FontSize="Small" HorizontalTextAlignment="Start"/>
                                <Editor WidthRequest="250" HorizontalOptions="End"/>
                            </Grid>
                            <Grid WidthRequest="400" HeightRequest="50" Padding="5" Margin="5" HorizontalOptions="Start">
                                <Label Text="Time:" FontSize="Small" HorizontalTextAlignment="Start"/>
                                <Editor WidthRequest="250" HorizontalOptions="End"/>
                            </Grid>
                            <Grid WidthRequest="400" HeightRequest="50" Padding="5" Margin="5" HorizontalOptions="Start">
                                <Label Text="Note:" FontSize="Small" HorizontalTextAlignment="Start"/>
                                <Editor WidthRequest="250" HorizontalOptions="End"/>
                            </Grid>
                            <Grid WidthRequest="400" HeightRequest="50" Padding="5" Margin="5" HorizontalOptions="Start">
                                <Label Text="Location:" FontSize="Small" HorizontalTextAlignment="Start"/>
                                <Editor WidthRequest="250" HorizontalOptions="End"/>
                            </Grid>
                            <Grid WidthRequest="400" Padding="5" Margin="5">
                                <Button Text="SAVE" FontSize="Small" WidthRequest="100" HeightRequest="50" IsEnabled="False"/>
                            </Grid>
                        </StackLayout>
                    </Frame>

                    <!--Cycling Form -->
                    <Frame x:Name="CycleForm" HeightRequest="350" WidthRequest="400" Margin="5" BackgroundColor="#D7EDE6" IsVisible="False">
                        <StackLayout>
                            <Label Text="Cycling" FontSize="Small" HorizontalOptions="Center" />
                            <Grid WidthRequest="400" HeightRequest="50" Padding="5" Margin="5" HorizontalOptions="Start">
                                <Label Text="Distance:" FontSize="Small" HorizontalTextAlignment="Start"/>
                                <Editor WidthRequest="250" HorizontalOptions="End"/>
                            </Grid>
                            <Grid WidthRequest="400" HeightRequest="50" Padding="5" Margin="5" HorizontalOptions="Start">
                                <Label Text="Time:" FontSize="Small" HorizontalTextAlignment="Start"/>
                                <Editor WidthRequest="250" HorizontalOptions="End"/>
                            </Grid>
                            <Grid WidthRequest="400" HeightRequest="50" Padding="5" Margin="5" HorizontalOptions="Start">
                                <Label Text="Note:" FontSize="Small" HorizontalTextAlignment="Start"/>
                                <Editor WidthRequest="250" HorizontalOptions="End"/>
                            </Grid>
                            <Grid WidthRequest="400" HeightRequest="50" Padding="5" Margin="5" HorizontalOptions="Start">
                                <Label Text="Location:" FontSize="Small" HorizontalTextAlignment="Start"/>
                                <Editor WidthRequest="250" HorizontalOptions="End"/>
                            </Grid>
                            <Grid WidthRequest="400" Padding="5" Margin="5">
                                <Button Text="SAVE" FontSize="Small" WidthRequest="100" HeightRequest="50" IsEnabled="False"/>
                            </Grid>
                        </StackLayout>
                    </Frame>

                    <!--Other Form -->
                    <Frame x:Name="OtherForm" HeightRequest="350" WidthRequest="400" Margin="5" BackgroundColor="#D7EDE6" IsVisible="False">
                        <StackLayout>
                            <Label Text="Other" FontSize="Small" HorizontalOptions="Center" />
                            <Grid WidthRequest="400" HeightRequest="50" Padding="5" Margin="5" HorizontalOptions="Start">
                                <Label Text="Distance:" FontSize="Small" HorizontalTextAlignment="Start"/>
                                <Editor WidthRequest="250" HorizontalOptions="End"/>
                            </Grid>
                            <Grid WidthRequest="400" HeightRequest="50" Padding="5" Margin="5" HorizontalOptions="Start">
                                <Label Text="Time:" FontSize="Small" HorizontalTextAlignment="Start"/>
                                <Editor WidthRequest="250" HorizontalOptions="End"/>
                            </Grid>
                            <Grid WidthRequest="400" HeightRequest="50" Padding="5" Margin="5" HorizontalOptions="Start">
                                <Label Text="Note:" FontSize="Small" HorizontalTextAlignment="Start"/>
                                <Editor WidthRequest="250" HorizontalOptions="End"/>
                            </Grid>
                            <Grid WidthRequest="400" HeightRequest="50" Padding="5" Margin="5" HorizontalOptions="Start">
                                <Label Text="Location:" FontSize="Small" HorizontalTextAlignment="Start"/>
                                <Editor WidthRequest="250" HorizontalOptions="End"/>
                            </Grid>
                            <Grid WidthRequest="400" Padding="5" Margin="5">
                                <Button Text="SAVE" FontSize="Small" WidthRequest="100" HeightRequest="50" IsEnabled="False"/>
                            </Grid>
                        </StackLayout>
                    </Frame>

                </StackLayout>
            </ScrollView>

                    <!-- Bottenknapp -->
                    <Button
                    x:Name="StartBtn"                
                    Text="Start"
                    WidthRequest="125"
                    HorizontalOptions="Center"
                    SemanticProperties.Description="Start workout button."
                    IsVisible="True"
                    Clicked="StartBtn_Clicked" />

        </VerticalStackLayout>

                <!-- Overlay when finished -->
                <Grid x:Name="OverlayGrid" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" WidthRequest="450" HeightRequest="750"
                        BackgroundColor="Black" Opacity="0.8" IsVisible="False" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1">
                    <Label Text="Finished workout&#x0a;&#x0a;Good job!" FontSize="Header" VerticalTextAlignment="Center" Style="{StaticResource SubHeadline}"/>
                </Grid>

    </AbsoluteLayout>
</ContentPage>