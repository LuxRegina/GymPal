<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymPal.AddRunningWorkout"
             Title="AddRunningWorkout"
             BackgroundColor="Black">
             
    <ScrollView>
        <VerticalStackLayout Padding="10,0" Spacing="40">
            
            <!--TopScreen components-->
            <Grid HeightRequest="120" WidthRequest="450" Padding="10" HorizontalOptions="Fill">

                <Label
                Text="Add new activity"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level1" 
                HorizontalOptions="Center"
                    VerticalOptions="Center"/>

                <ImageButton 
                Source="kondition.png"
                CornerRadius="65"
                HeightRequest="80"
                WidthRequest="80"
                Aspect="AspectFit"
                HorizontalOptions="Start"
                Clicked="RunningBtn_Clicked"
                SemanticProperties.Description="testPicture" />

                <ImageButton 
                Source="homeicon.png"
                CornerRadius="10"
                BorderWidth="5"
                HeightRequest="60"
                WidthRequest="60"
                Aspect="AspectFit"
                HorizontalOptions="End"
                Clicked="HomeBtn_Clicked"
                SemanticProperties.Description="testPicture" />

            </Grid>
            
            <!--Tappable Frames-->
            <StackLayout x:Name="FrameStack" HeightRequest="500" WidthRequest="400" IsVisible="True">
                <Frame x:Name="RunningFrame" HeightRequest="80" BackgroundColor="#D7EDE6" Margin="5" IsVisible="True">
                    <VerticalStackLayout>
                        <Label FontSize="Subtitle" Text="Running" VerticalOptions="Center"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="RunningFrame_Tapped"/>
                    </Frame.GestureRecognizers>
                </Frame>
                <Frame x:Name="WalkingFrame" HeightRequest="80" BackgroundColor="#D7EDE6" Margin="5" IsVisible="True">
                    <VerticalStackLayout>
                        <Label FontSize="Subtitle" Text="Walking" VerticalOptions="Center"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="WalkingFrame_Tapped"/>
                    </Frame.GestureRecognizers>
                </Frame>
                <Frame x:Name="SwimmingFrame" HeightRequest="80" BackgroundColor="#D7EDE6" Margin="5" IsVisible="True">
                    <VerticalStackLayout>
                        <Label FontSize="Subtitle" Text="Swimming" VerticalOptions="Center"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Swimming_Tapped"/>
                    </Frame.GestureRecognizers>
                </Frame>
                <Frame x:Name="CyclingFrame" HeightRequest="80" BackgroundColor="#D7EDE6" Margin="5" IsVisible="True">
                    <VerticalStackLayout>
                        <Label FontSize="Subtitle" Text="Cycling" VerticalOptions="Center"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Cycling_Tapped"/>
                    </Frame.GestureRecognizers>
                </Frame>
                <Frame x:Name="OtherFrame" HeightRequest="80" BackgroundColor="#D7EDE6" Margin="5" IsVisible="True">
                    <VerticalStackLayout>
                        <Label FontSize="Subtitle" Text="Other" VerticalOptions="Center"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Other_Tapped"/>
                    </Frame.GestureRecognizers>
                </Frame>

            </StackLayout>
            
            <!--NoneVisable Forms-->
            
            <!--Running Form Visable once Running is tapped-->
            <Frame x:Name="RunForm" HeightRequest="400" WidthRequest="400" Margin="5" BackgroundColor="#D7EDE6" IsVisible="False">
                <StackLayout>
                    <Grid WidthRequest="400" HeightRequest="50" Padding="10" Margin="5">
                        <Label Text="Distance:" FontSize="Medium" HorizontalOptions="Start" VerticalOptions="Center" />
                        <Entry HorizontalTextAlignment="Start" VerticalTextAlignment="Start" WidthRequest="270" HorizontalOptions="End" VerticalOptions="Center" BackgroundColor="Transparent"/>
                    </Grid>
                    <Grid WidthRequest="400" HeightRequest="55" Padding="7" Margin="5">
                        <Label Text="Time:" FontSize="Medium" HorizontalOptions="Start" VerticalOptions="Center" />
                        <Editor WidthRequest="270" HorizontalOptions="End" VerticalOptions="Center"></Editor>
                    </Grid>
                    <Grid WidthRequest="400" HeightRequest="50" Padding="10" Margin="5">
                        <Label Text="Note:" FontSize="Medium" HorizontalOptions="Start" VerticalOptions="Center" />
                        <Entry WidthRequest="270" HorizontalOptions="End" VerticalOptions="Center"/>
                    </Grid>
                    <Grid WidthRequest="400" HeightRequest="50" Padding="10" Margin="5">
                        <Label Text="Loction:" FontSize="Medium" HorizontalOptions="Start" VerticalOptions="Center" />
                        <Entry WidthRequest="270" HorizontalOptions="End" VerticalOptions="Center"/>
                    </Grid>
                    <Grid WidthRequest="400" Padding="10" Margin="5">
                        <Button Text="SAVE" FontSize="Small" WidthRequest="100" HeightRequest="50" IsEnabled="False"></Button>
                    </Grid>

                </StackLayout>
            </Frame>

            <!--Walking Form Visable once Walking is tapped-->
            <Frame x:Name="WalkForm" HeightRequest="400" WidthRequest="400" Margin="5" BackgroundColor="#D7EDE6" IsVisible="False">
                <StackLayout>
                    <Grid WidthRequest="400" HeightRequest="50" Padding="10" Margin="5">
                        <Label Text="Distance:" FontSize="Medium" HorizontalOptions="Start" VerticalOptions="Center" />
                        <Entry WidthRequest="270" HorizontalOptions="End" VerticalOptions="Center"/>
                    </Grid>
                    <Grid WidthRequest="400" HeightRequest="50" Padding="10" Margin="5">
                        <Label Text="Time:" FontSize="Medium" HorizontalOptions="Start" VerticalOptions="Center" />
                        <Entry WidthRequest="270" HorizontalOptions="End" VerticalOptions="Center"/>
                    </Grid>
                    <Grid WidthRequest="400" HeightRequest="50" Padding="10" Margin="5">
                        <Label Text="Note:" FontSize="Medium" HorizontalOptions="Start" VerticalOptions="Center" />
                        <Entry WidthRequest="270" HorizontalOptions="End" VerticalOptions="Center"/>
                    </Grid>
                    <Grid WidthRequest="400" HeightRequest="50" Padding="10" Margin="5">
                        <Label Text="Loction:" FontSize="Medium" HorizontalOptions="Start" VerticalOptions="Center" />
                        <Entry WidthRequest="270" HorizontalOptions="End" VerticalOptions="Center"/>
                    </Grid>
                    <Grid WidthRequest="400" Padding="10" Margin="5">
                        <Button Text="SAVE" FontSize="Small" WidthRequest="100" HeightRequest="50" IsEnabled="False"></Button>
                    </Grid>
                </StackLayout>
            </Frame>
            
            <!--Swimming Form Visable once Swimming is tapped-->
            <Frame x:Name="SwimForm" HeightRequest="400" WidthRequest="400" Margin="5" BackgroundColor="#D7EDE6" IsVisible="False">
                <StackLayout>
                    <Grid WidthRequest="400" HeightRequest="50" Padding="10" Margin="5">
                        <Label Text="Distance:" FontSize="Medium" HorizontalOptions="Start" VerticalOptions="Center" />
                        <Entry WidthRequest="270" HorizontalOptions="End" VerticalOptions="Center"/>
                    </Grid>
                    <Grid WidthRequest="400" HeightRequest="50" Padding="10" Margin="5">
                        <Label Text="Time:" FontSize="Medium" HorizontalOptions="Start" VerticalOptions="Center" />
                        <Entry WidthRequest="270" HorizontalOptions="End" VerticalOptions="Center"/>
                    </Grid>
                    <Grid WidthRequest="400" HeightRequest="50" Padding="10" Margin="5">
                        <Label Text="Note:" FontSize="Medium" HorizontalOptions="Start" VerticalOptions="Center" />
                        <Entry WidthRequest="270" HorizontalOptions="End" VerticalOptions="Center"/>
                    </Grid>
                    <Grid WidthRequest="400" HeightRequest="50" Padding="10" Margin="5">
                        <Label Text="Style:" FontSize="Medium" HorizontalOptions="Start" VerticalOptions="Center" />
                        <Entry WidthRequest="270" HorizontalOptions="End" VerticalOptions="Center"/>
                    </Grid>
                    <Grid WidthRequest="400" Padding="10" Margin="5">
                        <Button Text="SAVE" FontSize="Small" WidthRequest="100" HeightRequest="50" IsEnabled="False"></Button>
                    </Grid>
                </StackLayout>
            </Frame>
            
            <!--Cycling Form Visable once Cycling is tapped-->
            <Frame x:Name="CycleForm" HeightRequest="400" WidthRequest="400" Margin="5" BackgroundColor="#D7EDE6" IsVisible="False">
                <StackLayout>
                    <Grid WidthRequest="400" HeightRequest="50" Padding="10" Margin="5">
                        <Label Text="Distance:" FontSize="Medium" HorizontalOptions="Start" VerticalOptions="Center" />
                        <Entry WidthRequest="270" HorizontalOptions="End" VerticalOptions="Center"/>
                    </Grid>
                    <Grid WidthRequest="400" HeightRequest="50" Padding="10" Margin="5">
                        <Label Text="Time:" FontSize="Medium" HorizontalOptions="Start" VerticalOptions="Center" />
                        <Entry WidthRequest="270" HorizontalOptions="End" VerticalOptions="Center"/>
                    </Grid>
                    <Grid WidthRequest="400" HeightRequest="50" Padding="10" Margin="5">
                        <Label Text="Note:" FontSize="Medium" HorizontalOptions="Start" VerticalOptions="Center" />
                        <Entry WidthRequest="270" HorizontalOptions="End" VerticalOptions="Center"/>
                    </Grid>
                    <Grid WidthRequest="400" HeightRequest="50" Padding="10" Margin="5">
                        <Label Text="Loction:" FontSize="Medium" HorizontalOptions="Start" VerticalOptions="Center" />
                        <Entry WidthRequest="270" HorizontalOptions="End" VerticalOptions="Center"/>
                    </Grid>
                    <Grid WidthRequest="400" Padding="10" Margin="5">
                        <Button Text="SAVE" FontSize="Small" WidthRequest="100" HeightRequest="50" IsEnabled="False"></Button>
                    </Grid>
                </StackLayout>
            </Frame>
            
            <!--Other Form Visable once Other is tapped-->
            <Frame x:Name="OtherForm" HeightRequest="400" WidthRequest="400" Margin="5" BackgroundColor="#D7EDE6" IsVisible="False">
                <StackLayout>
                    <Grid WidthRequest="400" HeightRequest="50" Padding="10" Margin="5">
                        <Label Text="Type:" FontSize="Medium" HorizontalOptions="Start" VerticalOptions="Center" />
                        <Entry WidthRequest="270" HorizontalOptions="End" VerticalOptions="Center"/>
                    </Grid>
                    <Grid WidthRequest="400" HeightRequest="50" Padding="10" Margin="5">
                        <Label Text="Time:" FontSize="Medium" HorizontalOptions="Start" VerticalOptions="Center" />
                        <Entry WidthRequest="270" HorizontalOptions="End" VerticalOptions="Center"/>
                    </Grid>
                    <Grid WidthRequest="400" HeightRequest="50" Padding="10" Margin="5">
                        <Label Text="Note:" FontSize="Medium" HorizontalOptions="Start" VerticalOptions="Center" />
                        <Entry WidthRequest="270" HorizontalOptions="End" VerticalOptions="Center"/>
                    </Grid>
                    <Grid WidthRequest="400" HeightRequest="50" Padding="10" Margin="5">
                        <Label Text="Intensity:" FontSize="Medium" HorizontalOptions="Start" VerticalOptions="Center" />
                        <Entry WidthRequest="270" HorizontalOptions="End" VerticalOptions="Center"/>
                    </Grid>
                    <Grid WidthRequest="400" Padding="10" Margin="5">
                        <Button Text="SAVE" FontSize="Small" WidthRequest="100" HeightRequest="50" IsEnabled="False"></Button>
                    </Grid>
                </StackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>